---
const PROJECTS = [{
    title : 'Proyecto 1 - asd',
    description : 'asdasd test 123123',
    link: '/',
    github: 'link',
    img: 'projects/p1.webp',
    tags : ['React', 'Tailwind CSS']
    },{
    title : 'Proyecto 2 - test',
    description : 'Este es un proyecto sobre asdasdassd',
    link: '/',
    github: 'link',
    img: 'projects/p2.webp',
    tags : ['Next.js', 'Laravel']
    }
]
---

{
    PROJECTS.map(({title, description, tags, img}) => (
        <article>
            <h3 class="text-2xl font-semibold mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map(tag => (
                    <li>
                        <span class="flex gap-x-2 bg-gray-100 text-gray-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-gray-700 dark:text-gray-300">
                            {tag}
                        </span>
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={img} alt={title}>
        </article>
    ))
}
